<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Autres attributs de style ici -->
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppEditTextStyle" >
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_title</item>
    </style>




    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Autres attributs de style pour les boutons -->
    </style>

</resources>